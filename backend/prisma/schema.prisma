// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  transactions Transaction[]
  bills        Bill[]
  dreamboxes   DreamBox[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  type        String
  title       String
  category    String
  value       Float
  description String
  date        DateTime @default(now())
}

model Bill {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  value       Float
  category    String
  description String
  date        DateTime @default(now())
  dueDate     String
}

model DreamBox {
  id       Int     @id @default(autoincrement())
  name     String
  current  Float
  goal     Float
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
  isActive Boolean
}
